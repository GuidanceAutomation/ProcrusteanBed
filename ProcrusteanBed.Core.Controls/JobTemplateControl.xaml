<UserControl x:Class="ProcrusteanBed.Core.Controls.JobTemplateControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ProcrusteanBed.Core.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             x:Name="jobTemplateControl">
    <StackPanel>
        <StatusBar>Job Template
            <StatusBar.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Clear" x:Name="clearMenuItem" Click="ClearMenuItem_Click"/>
                    <MenuItem Header="Convert to Json" x:Name="convertToJsonMenuItem" Click="ConvertToJsonMenuItem_Click"/>
                    <MenuItem Header="Load from Json" x:Name="loadFromJsonMenuItem" Click="LoadFromJsonMenuItem_Click"/>
                </ContextMenu>
            </StatusBar.ContextMenu>
        </StatusBar>
        <local:JobControl DataContext="{Binding ElementName=jobTemplateControl, Path=Job}"/>
    </StackPanel>
</UserControl>

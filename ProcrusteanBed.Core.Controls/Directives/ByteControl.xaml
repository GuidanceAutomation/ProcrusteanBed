<UserControl x:Class="ProcrusteanBed.Core.Controls.Directives.ByteControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:toolkit="http://schemas.xceed.com/wpf/xaml/toolkit"
             xmlns:local="clr-namespace:ProcrusteanBed.Core.Controls.Directives"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <TextBlock Text="ByteControl"/>
        <toolkit:IntegerUpDown x:Name="integerUpDown" Minimum="0" Maximum="255" Value="{Binding DirectiveValue}"/>
    </StackPanel>
</UserControl>
